<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/survey_run_options">
        <EditTextPreference
            android:key="welcome"
            android:title="@string/welcome"
            android:summary="@string/welcome_summary"
            android:dialogTitle="@string/edit_welcome"
            android:defaultValue="@string/welcome_default"
        />
        <EditTextPreference
            android:key="thanks"
            android:title="@string/thanks"
            android:summary="@string/thanks_summary"
            android:dialogTitle="@string/edit_thanks"
            android:defaultValue="@string/thanks_default"
        />
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/report_options">
        <EditTextPreference
            android:key="sendto"
            android:title="@string/email"
            android:summary="@string/email_summary"
            android:dialogTitle="@string/edit_email"
        />
    </PreferenceCategory>
</PreferenceScreen>